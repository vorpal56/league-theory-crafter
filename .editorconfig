# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = true

[*.{html,css,py}]
indent_size = 2

[*.{py,ts}]
quote_type = double

[*.md]
max_line_length = off
trim_trailing_whitespace = false
